  <script>
    // small helpers
    document.getElementById('year').textContent = new Date().getFullYear();

    // project modal logic
    const projects = document.querySelectorAll('.project');
    const modal = document.getElementById('modal');
    const modalTitle = document.getElementById('modalTitle');
    const modalDesc = document.getElementById('modalDesc');

    projects.forEach(p => {
      p.addEventListener('click', () => {
        modalTitle.textContent = p.dataset.title || 'Project';
        modalDesc.textContent = p.dataset.desc || 'No description';
        modal.style.display = 'flex';
        modal.setAttribute('aria-hidden','false');
      });
    });
    function closeModal(){
      modal.style.display = 'none';
      modal.setAttribute('aria-hidden','true');
    }
    modal.addEventListener('click', (e)=> {
      if(e.target === modal) closeModal();
    });

    // smooth scroll for nav
    document.querySelectorAll('a[href^="#"]').forEach(a=>{
      a.addEventListener('click', (e)=>{
        const href = a.getAttribute('href');
        if(!href || href === '#') return;
        const el = document.querySelector(href);
        if(el) { e.preventDefault(); el.scrollIntoView({behavior:'smooth', block:'start'}); }
      });
    });

    // contact form fake submit (replace with real endpoint e.g. Formspree / Netlify functions)
    function submitContact(){
      const name = document.getElementById('cname').value.trim();
      const email = document.getElementById('cemail').value.trim();
      const msg = document.getElementById('cmessage').value.trim();
      const status = document.getElementById('formStatus');
      if(!name || !email || !msg){ status.textContent = 'Please complete the form.'; return; }
      status.textContent = 'Sending...';
      // simulate network
      setTimeout(()=>{
        status.textContent = 'Message sent — I will contact you within 24–48 hours. Thank you!';
        // clear fields optionally
        document.getElementById('cname').value=''; document.getElementById('cemail').value=''; document.getElementById('cmessage').value='';
      }, 900);
    }

    // optional: wire resume download & external links
    document.getElementById('downloadResume').addEventListener('click', (e)=>{
      e.preventDefault();
      // replace this URL with your resume file on your hosting (Netlify/GDrive/Public link)
      const url = '#';
      if(url === '#'){ alert('Replace the resume URL in the code with your actual resume file link.'); return; }
      window.open(url,'_blank');
    });
  </script>
